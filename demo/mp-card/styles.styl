@import '../../src/styles/theme/text-styles'
@import '../../src/styles/theme/main'
@import '../../src/styles/theme/reset'

body, html 
  margin: 0;
  background-color var(--mp-color-main--10)
  
figure, img {
  max-width: 100%;
  object-fit: contain;
  padding: 0;
  margin: 0;
}

mp-card {
  max-width: 460px;
  margin: 36px;
  background-color white
}

mp-card:first-of-type {
  --mp-card-header-color: var(--mp-color-light--90);
  --mp-card-header-background-color: var(--mp-color-main--50);
}

.persons-grid {
  width 100%
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.persons-grid ul li:first-of-type {
  margin-bottom: var(--mp-size--2);
  color var(--mp-color-dark--60)
}

