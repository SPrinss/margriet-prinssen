@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/main'
@import '../../src/styles/mixins/base-styles'

:host
  display block
  border-radius var(--mp-border-radius--1)
  box-shadow var(--mp-box-shadow--1)
  background-color: var(--mp-color-secondary--30);
  height 100%

:host(:hover)
  box-shadow var(--mp-box-shadow--3)
  cursor pointer
  transform: scale(1.01)
  
main
  display flex
  flex-direction column
  height 100%

$$text-styles()

figure
img
  max-width 100%
  height 240px
  width 100%
  object-fit cover
  padding: 0;
  margin: 0;
  user-select none

section
  height 100%
  flex 1
  padding var(--mp-size--4)

h4
  margin-bottom var(--mp-size--2)

ul
  margin-bottom var(--mp-size--1)

ul li
  display inline-block

ul li:not(:last-of-type):after
  content: '-'
  display inline-block
  width: 10px;
  margin-left: 5px;
  text-align: center;

span
  mp-text-c2()

span:first-of-type:not(:empty) + span:nth-of-type(2):not(:empty):before
  content: '-'
  display inline-block
  width: 10px;
  margin-right: 5px;
  text-align: center;

@media (prefers-color-scheme: dark) 
  :host
    background-color var(--mp-color-dark--60);
    color var(--mp-color-light--100)


@media only screen and (max-width: 660px)
  $$text-font-size-mobile-styles()    