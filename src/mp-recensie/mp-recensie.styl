@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/main'
@import '../../src/styles/mixins/base-styles'

header {
  background-color: hsl(138, 100%, 68%);
  padding-top: 32px;
}

#header-content-wrapper 
  padding 24px 0
  color hsl(243, 50%, 20%)
  grid-area header

#aside-right-content-wrapper h3
#aside-right-content-wrapper h5
  margin-bottom var(--mp-size--4)

main, header 
  display grid
  grid-template-columns 2fr 4fr minmax(0px, 2fr)
  gap var(--mp-size--8)

main 
  grid-template-areas: 
    "aside-left body aside-right";
  margin-top var(--mp-size--7)
  justify-items center
  align-items start

header 
  grid-template-areas: 
    ". header .";
  justify-items start
  align-items start

#aside-right-content-wrapper 
  grid-area aside-left
  justify-self start
  text-align start

#main-content-wrapper
  grid-area body

#aside-right-content-wrapper
  grid-area aside-right

$$text-styles()
$$a-link()

ul
  padding 0
  margin-bottom var(--mp-size--2)


.list 
  list-style: none;
  mp-text-b3()

.list li:first-of-type 
  color hsl(138, 100%, 30%)

.list li:not(:first-of-type) 
  color black

article p:first-of-type 
  padding-top 0
  margin-top 0

figure, img {
  max-width: 100%;
  object-fit: contain;
  padding: 0;
  margin: 0;
}  

@media only screen and (max-width: 660px)
  header 
    padding-top var(--mp-size--6)

  #header-content-wrapper 
    padding var(--mp-size--4) 0

  #header-content-wrapper h1,
  #aside-left-content-wrapper h3
    margin-bottom var(--mp-size--3)

  main, header 
    grid-template-columns: 1fr;
    grid-template-rows: auto auto auto;
    justify-items start
    align-items start
    gap var(--mp-size--3)

  main 
    grid-template-areas: 
      "aside-right"\
      "aside-left"\
      "body"\;

  header 
    grid-template-areas: 
      "."\
      "header"\
      ".";
    padding 0 var(--mp-size--3)

  #aside-right-content-wrapper
    grid-area aside-left
    justify-self start
    text-align left
    padding 0 var(--mp-size--3)
    width 100%
    border-bottom 1px solid black

  h1
    mp-text-h2()

  h2
    mp-text-h3()

  h3
    mp-text-h4()

  h4
    mp-text-h5()

  h5
    mp-text-h6()

  article,
  p
    mp-text-b3()
    padding 0 var(--mp-size--3)