@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/main'
@import '../../src/styles/mixins/base-styles'

$$text-styles() 

main
  position relative
  height 100%
  overflow-y auto
  display flex
  flex-direction: column
  width: 100%;
  height: 100%;
  overflow-x: hidden;

nav
  width 100%
  display flex
  flex-direction row
  justify-content flex-end
  align-items center
  max-width 1080px
  margin auto
  padding var(--mp-size--5) var(--mp-size--5)
  z-index 2
  color var(--mp-color-dark--100)  

figure, img {
  object-fit: contain;
  padding: 0;
  margin: 0;
}

nav a 
  fill: currentColor;

svg
  width 44px
  height 100%

nav ul
  display flex
  flex-direction row
  justify-content flex-end
  list-style none

nav ul li
  margin 0 12px

nav ul li:last-of-type
  margin-right 0

nav ul li a
  mp-text-c1()
  color var(--mp-color-dark--50)


nav ul li a[data-active]
  color var(--mp-color-dark--100)
  padding-bottom: var(--mp-size--2)
  border-bottom: 1px solid var(--mp-color-dark--100)

.page
  display block
  flex 1

main
.page
nav
  background-color var(--mp-color-secondary--20)

.page:not([visible]) {
  display none
  // opacity 0
  // pointer-events none
  // transition visibility 0s 0.5s, opacity 0.5s linear
  // visibility hidden
  // height 0
}

.page[visible] {
  display block
  // opacity 1
  // pointer-events auto
  // transition opacity 0.5s linear
  // visibility visible
  // height auto
}

mp-auth
  margin auto;

.page-content
  max-width 1080px
  margin auto
  padding 0 var(--mp-size--5)

footer
  // min-height var(--mp-size--10)
  background-color var(--mp-color-main--100)
  color var(--mp-color-dark--100)
  display flex
  align-items center

footer > * 
  max-width 1080px
  margin auto
  padding var(--mp-size--5)


@media (prefers-color-scheme: dark) 
  nav ul li a
    color var(--mp-color-light--70)

  nav ul li a[data-active]
    color var(--mp-color-light--90)    
    border-bottom: 1px solid var(--mp-color-light--90)

  footer
    background-color var(--mp-color-dark--60);
    color var(--mp-color-light--100)
  
  main
  nav
  .page
    background-color var(--mp-color-dark--90)


@media only screen and (max-width: 660px)
  $$text-font-size-mobile-styles()        

  nav ul
    justify-content: space-between;
    flex-wrap: wrap;
    width 100%

  nav ul li
    padding 0
    margin var(--mp-size--3) 0

  nav ul li a
    font-size: var(--mp-text-c1-mobile-font-size); 