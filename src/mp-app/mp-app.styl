@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/main'
@import '../../src/styles/mixins/base-styles'

$$text-styles() 

main
  position relative
  height 100%
  overflow-y auto

nav
  width 100%
  display flex
  flex-direction row
  justify-content space-between
  align-items baseline
  background-color transparent
  max-width 1080px
  margin auto
  padding 0 var(--mp-size--5)
  height var(--mp-size--11)
  z-index 2
  color white
  position absolute
  top 0
  left 0 
  right 0

nav ul
  display flex
  flex-direction row
  justify-content flex-end
  list-style none

nav ul li
  padding 0 12px
  line-height 58px

nav ul li:last-of-type
  padding-right 0

nav ul li a
  mp-text-c1()

.page
  display block

.page:not([visible]) {
  display none
  // opacity 0
  // pointer-events none
  // transition visibility 0s 0.5s, opacity 0.5s linear
  // visibility hidden
  // height 0
}

.page[visible] {
  display block
  // opacity 1
  // pointer-events auto
  // transition opacity 0.5s linear
  // visibility visible
  // height auto
}

.page-content
  max-width 1080px
  margin auto
  padding 0 var(--mp-size--5)

footer
  height var(--mp-size--10)
  background-color var(--mp-color-main--80)
  display flex
  align-items center

footer > * 
  max-width 1080px
  margin auto
  padding 0 var(--mp-size--5)
  color white

