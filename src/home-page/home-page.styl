@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/main'
@import '../../src/styles/theme/text-styles'
@import '../../src/styles/mixins/base-styles'

$$text-styles()

header
  min-height 500px
  background-image: url('../../images/Vivier Glaubst du an die Unsterblichkeit der Seele.jpg');
  background-position-x: right;
  background-repeat: no-repeat;
  background-size: cover;

header #overlay
  position absolute
  width: 100%;
  height: 100%;
  background-color: hsla(0, 0%, 0%, .55);

.recensie-grid
  $grid(2)
  
.interview-grid
  $grid(3)

recensie-preview:hover 
interview-preview:hover 
  box-shadow var(--mp-box-shadow--3)
  cursor pointer

ul li:first-of-type
  margin-bottom: var(--mp-size--2);
  color var(--mp-color-dark--60)

section > *:first-child
  text-align left
  margin var(--mp-size--6) 0

.more-button
  margin-top var(--mp-size--4)