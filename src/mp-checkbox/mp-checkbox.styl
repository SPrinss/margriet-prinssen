@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/text-styles'

:host
  outline none
  user-select none
  -webkit-user-select none
  display inline-block
  font-size 0
  position relative

  span
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    text-align center
    display flex
    // padding 0px var(--mp-size--1) 
    mp-text-b1()
    // font-family 'MaterialIcons-Regular', 'Material Icons', sans-serif
    color var(--mp-color-dark--100)
    pointer-events none
    display none

  input
    appearance none
    -webkit-appearance none
    -moz-appearance none
    -ms-appearance none
    height var(--mp-size--6)
    width var(--mp-size--6)
    padding 0
    background var(--mp-color-main--10)
    color var(--mp-color-main--100)
    border-radius var(--mp-border-radius--1)
    cursor pointer
    user-select none
    margin 0
    outline 5px auto blue
    outline 5px auto -webkit-focus-ring-color

    &:not([disabled])

      &:hover
        background var(--mp-color-main--20)

      &:active
        background var(--mp-color-main--30)
    
      &[checked]
        background var(--mp-color-main--100)

    &[checked]
      background var(--mp-color-main--100)

    &[disabled]
      cursor default
      opacity 0.4

  &([checked])
    span
      display block

:host(:not(.focus-visible)) input
  outline none