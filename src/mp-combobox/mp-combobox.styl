@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/border-radius'
@import '../../src/styles/theme/text-styles'

:host
  display inline-block

.hidden 
  display none

.combobox-wrapper 
  position relative
  font-size 16px
  width 100%
  height 100%

input, #ex1-combobox, #ex1-listbox 
  width 100%
  height 100%

.listbox, .grid 
  background var(--mp-color-light--100)
  list-style none
  margin 0
  padding 0
  position absolute
  z-index 1

.listbox .result 
  cursor default
  margin 0

.listbox .result:hover
.grid .result-row 
  background var(--mp-color-main--20)
 
.listbox .result:hover
.grid .result-row:hover 
  background var(--mp-color-main--60)

.listbox .focused
.grid .focused 
  background var(--mp-color-main--60)

.result
input
  mp-text-b3()
  width 100%
  min-height 100%
  padding var(--mp-size--2)

input 
  border-radius var(--mp-combobox-border-radius, var(--mp-border-radius--1))
  border none

.result
.listbox
  background: var(--mp-color-main--40);  
  color var(--mp-color-dark--100)


.result-category
.result-count
  color var(--mp-color-dark--80)

@media (prefers-color-scheme: dark) 
  .result
  .listbox
    background: var(--mp-color-dark--70);
    color var(--mp-color-light--100)


  .result-category
  .result-count
    color var(--mp-color-light--70)

  .listbox .result:hover
  .grid .result-row:hover 
  .listbox .focused
  .grid .focused     
    background var(--mp-color-dark--60)