@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/main'
@import '../../src/styles/mixins/base-styles'

$$text-styles() 

main
  position relative
  height 100%
  overflow-y auto
  display flex
  flex-direction: column
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  padding: var(--mp-size--7);

  form
    display: flex
    flex-direction: column
    gap var(--mp-size--4)

    > *
      max-width: var(--mp-size--16)
    > sl-textarea
      max-width: var(--mp-size--18)

figure, img {
  object-fit: contain;
  padding: 0;
  margin: 0;
}




// @media (prefers-color-scheme: dark) 


@media only screen and (max-width: 660px)
  $$text-font-size-mobile-styles()        
  main
    padding: var(--mp-size--4);
