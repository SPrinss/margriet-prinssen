@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/main'

:host
  outline none
  user-select none
  -webkit-user-select none
  display inline-block
  font-size 0
  width var(--mp-size--14)

  #container
    position relative
    height var(--mp-size--9)
    mp-text-b2()
    display flex
    justify-content space-between
    color var(--mp-color-light--100)

    #label
      mp-text-b1()
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      display flex
      pointer-events none
      align-items center
      padding 0 var(--mp-size--4)
      justify-content: space-between
      align-items center

      span
        flex 1
        display block
        white-space nowrap
        overflow hidden
        text-overflow ellipsis

  select
    width 100%
    height 100%
    mp-text-b2()
    // color transparent
    background var(--mp-color-main--100)
    border-radius var(--mp-border-radius--1)
    border 2px solid transparent
    cursor pointer
    user-select none
    -webkit-user-select none
    outline 5px auto blue
    outline 5px auto -webkit-focus-ring-color

    &:not([disabled])

      &:hover
        background var(--mp-color-main--90)

      &:active
        background var(--mp-color-main--100)
        transform translate(var(--mp-size--1), var(--mp-size--1))
    
    &[disabled]
      cursor default
      opacity 0.4

:host([light])

  #container
    color var(--mp-color-main--100)
  
  select
    background var(--mp-color-light--100)
    border-color var(--mp-color-main--100)

    &:hover
      background var(--mp-color-main--10)

    &:active
      background transparent

:host(:not(.focus-visible)) select
  outline none      