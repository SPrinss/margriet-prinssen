@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/main'
@import '../../src/styles/mixins/base-styles'
  
page-content-spacing()
  max-width var(--mp-page-max-width, 1080px)
  margin auto
  padding 0 var(--mp-size--5);

:host
  display block
  
#bottom-hor-line-bottom
main ::slotted(section)
  margin-bottom var(--mp-size--11)

header 
  text-align: center
  padding var(--mp-size--11)

main
  page-content-spacing()

#top-hor-line-top
#top-hor-line-bottom
  width 100%
  height: 3px  

#top-hor-line-top
  background: linear-gradient(90deg, var(--mp-color-main--100) 39%, transparent 39%);
  margin-top var(--mp-size--4)

#top-hor-line-bottom
  margin-top: calc(var(--mp-size--11) - var(--mp-size--10))
  background: linear-gradient(90deg, var(--mp-color-secondary--100) 29%, transparent 29%);

#bottom-hor-line-top
#bottom-hor-line-bottom
  width 100%
  height: 3px  

#bottom-hor-line-top
  background: linear-gradient(90deg, transparent 61%, var(--mp-color-main--100) 61%);
  margin-top var(--mp-size--4)

#bottom-hor-line-bottom
  margin-top: calc(var(--mp-size--11) - var(--mp-size--10))
  background: linear-gradient(90deg, transparent 64%, var(--mp-color-secondary--100) 64% , var(--mp-color-secondary--100) 93%, transparent 93%);

@media (prefers-color-scheme: dark) 
  .header-content-container
    color var(--mp-color-light--100)


  ::slotted(*)
    color var(--mp-color-light--100)

@media only screen and (max-width: 660px)
  header 
    padding var(--mp-size--7)
  
  #bottom-hor-line-bottom
  main ::slotted(section)
    margin-bottom var(--mp-size--7)