@import '../../src/styles/theme/reset'
@import '../../src/styles/theme/main'
@import '../../src/styles/theme/text-styles'
@import '../../src/styles/mixins/base-styles'

$$text-styles()
$$a-link()

#intro-section img
  margin-right: var(--mp-size--6);

#intro-section
  display flex
  flex-direction: row
  justify-content: space-between
  align-items: center
  margin-top var(--mp-size--10)

blockquote
  margin var(--mp-size--10) 0
  
h4
h5
  margin-top var(--mp-size--7)
  margin-bottom var(--mp-size--3)

p
  margin var(--mp-size--4) 0 

#top-hor-line
#bottom-hor-line
  width 100%
  height: 2px  

#top-hor-line
#bottom-hor-line
  margin-top var(--mp-size--2);

#top-hor-line
  background: linear-gradient(90deg, transparent 29%, var(--mp-color-main--100) 29%, var(--mp-color-main--100) 69%, transparent 69%, transparent 100%);

#bottom-hor-line
  background: linear-gradient(90deg, transparent 34%, var(--mp-color-secondary--100) 34% , var(--mp-color-secondary--100) 77%, transparent 77%);


@media (prefers-color-scheme: dark) 
  header
    background-color var(--mp-color-dark--80)
    color var(--mp-color-light--100)

@media only screen and (max-width: 660px)
  $$text-font-size-mobile-styles()

  #intro-section
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-end
    margin-top var(--mp-size--7)

  #intro-section img
    margin-right: 0;
  
  h4
    margin-top var(--mp-size--5)

  blockquote
    margin var(--mp-size--7) 0    